//- menu block
mixin item(svg, name, url)
     .sidebar__item 
        .sidebar__picture
            //- svg.icon(xmlns=`/src/image/${svg}.svg`)
            //- use(xlink:href=`/src/image/${svg}.svg`)
            img(src=`/src/image/${svg}.svg`, alt="menu picture")
        .sidebar__text
            a(href=`#${url}`) 
                p= name
        .sidebar__arrow
            img(src='/src/image/vector.svg')


//- user block inmitation back-end data 
mixin user(name, position, pic)
    .sidebar__picture 
        img(src=`/src/image/${pic}.png`, alt="user picture")
    .sidebar__user-name
        h2= name
        .sidebar__user-position
            h3= position


//- content block 
mixin table(name, company, phone, email, country, status)
    table.content__table
        thead 
            tr
                th Customer Name
                th Company
                th Phone Number
                th Email
                th Country
                th Status
        tbody 
            tr 
                td Jane Cooper
                td Microsoft
                td (225) 555-0118
                td jane@microsoft.com
                td United States
                td Active